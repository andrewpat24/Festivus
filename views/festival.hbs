                                </div>
                                <div class="page-lineup-all-artists-result">

                                    <div class="uk-child-width-1-3@m" uk-grid>
                                        {{#each festivalLineup}}
                                            <div onclick="redirectToRouteWithId('artist',{{{artistId}}})">
                                                <div>
